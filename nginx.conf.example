# Nginx Configuration for svproducts.store
# Place this in /etc/nginx/sites-available/svproducts.store

# Redirect HTTP to HTTPS and non-www to www
server {
    listen 80;
    listen [::]:80;
    server_name svproducts.store www.svproducts.store;
    
    # Redirect all HTTP to HTTPS www
    return 301 https://www.svproducts.store$request_uri;
}

# Redirect HTTPS non-www to HTTPS www
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name svproducts.store;
    
    # SSL certificates (update paths as needed)
    ssl_certificate /etc/letsencrypt/live/svproducts.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/svproducts.store/privkey.pem;
    
    # Redirect to www version
    return 301 https://www.svproducts.store$request_uri;
}

# Main server block - HTTPS www (canonical)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.svproducts.store;
    
    # Document root
    root /var/www/svproducts.store/public;
    index index.php index.html;
    
    # SSL certificates (update paths as needed)
    ssl_certificate /etc/letsencrypt/live/svproducts.store/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/svproducts.store/privkey.pem;
    
    # SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss application/atom+xml image/svg+xml;
    
    # Laravel application
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP-FPM configuration
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        fastcgi_hide_header X-Powered-By;
    }
    
    # Deny access to hidden files
    location ~ /\.(?!well-known).* {
        deny all;
    }
    
    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg|webp)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Sitemap and robots.txt
    location = /sitemap.xml {
        expires 1d;
        add_header Cache-Control "public";
    }
    
    location = /robots.txt {
        expires 7d;
        add_header Cache-Control "public";
    }
    
    # Storage symlink
    location /storage {
        alias /var/www/svproducts.store/storage/app/public;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    # Error pages
    error_page 404 /index.php;
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
    
    # Logs
    access_log /var/log/nginx/svproducts.store.access.log;
    error_log /var/log/nginx/svproducts.store.error.log;
}
